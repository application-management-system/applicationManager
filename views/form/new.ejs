<% include ../partials/header %>

<div class="container form-new">
  <div class="row">
    <div class="col-6">
      <button class="btn btn-lg form-btn m-2" id="text-input-btn" onclick="addField('text input')">Text Input</button>
      <button class="btn btn-lg form-btn m-2" id="text-area-btn" onclick="addField('text area')">Text Area</button>
      <button class="btn btn-lg form-btn m-2" id="checkbox-btn" onclick="addField('checkbox')">Checkbox</button>
      <button class="btn btn-lg form-btn m-2" id="radio-btn" onclick="addField('radio')">Radio</button>
    </div>
    <div class="col-6">
      <h1> Create a New form</h1>
      <form id="create-form" action="/form" method="POST">
        <button id="form-submit-btn">Submit</button>
      </form>
    </div>
  </div>
</div>

<script>
  var i = 0; /* Set Global Variable i */
  function increment() {
    i += 1;
  }

  function addField(field) {
    var form = document.getElementById("create-form");
    var submitBtn = document.getElementById("form-submit-btn");

    var container = document.createElement("span");
    var label = document.createElement("input");
    var inputType = document.createElement("input");
    increment();

    label.setAttribute("type", "text");
    label.setAttribute("placeholder", "label");
    label.setAttribute("name", "fieldLabel_" + i);
    label.classList.add("labels");
    inputType.setAttribute("type", "text");
    inputType.setAttribute("name", "fieldType_" + i);
    inputType.value = field;
    inputType.readOnly = true;
    inputType.classList.add("inputTypes");

    container.appendChild(label);
    container.appendChild(inputType);
    container.setAttribute("id", "id_" + i);
    container.classList.add("fields")
    form.insertBefore(container, submitBtn);
  }
</script>
<% include ../partials/footer %>
